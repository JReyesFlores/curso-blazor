@using Entidades
@using Business
@inject NavigationManager navManager

<EditForm Model="oCategory">
    <div class="form-group">
        <label>Referencia:</label>
        <InputText @bind-Value="oCategory.CategoryId" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Nombre de la categoria:</label>
        <InputText @bind-Value="oCategory.CategoryName" class="form-control"/>
    </div>

    <input type="button" class="btn btn-outline-success" value="Guardar Categoria" @onclick="SaveCategory"/>
</EditForm>

@code {
    CategoryEntity oCategory = null;

    protected override async Task OnInitializedAsync()
    {
        oCategory = new CategoryEntity();
    }

    private void SaveCategory()
    {
        B_Category.CreateCategory(oCategory);
        navManager.NavigateTo("category/list");
    }
}
